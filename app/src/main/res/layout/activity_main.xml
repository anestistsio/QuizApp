<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/team1_et"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/quizapp_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:hint="Team 1 Name"
        android:paddingLeft="12dp"
        android:fontFamily="@font/mansalva"
        android:background="@drawable/edit_round"
        android:inputType="text"
        android:maxLength="15" />

    <EditText
        android:id="@+id/team2_et"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/team1_et"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="50dp"
        android:maxLength="15"
        android:background="@drawable/edit_round"
        android:hint="Team 2 Name"
        android:fontFamily="@font/mansalva"
        android:paddingLeft="12dp"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/start_bt"
        android:layout_width="154dp"
        android:layout_height="143dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#00FFFFFF"
        android:onClick="select_category"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/start_bt" />

    <ImageButton
        android:id="@+id/team1_im"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/quizapp_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="95dp"
        android:onClick="TakePicture"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/photo_bt" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team1_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/quizapp_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="95dp"
         />
    <ImageButton
        android:id="@+id/team2_im"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/quizapp_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        android:background="#00FFFFFF"
        android:onClick="TakePicture"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/photo_bt" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team2_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/quizapp_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        />


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/quizapp_tv"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <View
        android:layout_width="match_parent"
        android:id="@+id/shadow_v"
        android:layout_height="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shadow"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:onClick="settings"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/options" />


    <ImageView
        android:id="@+id/share_bt"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="#00FFFFFF"
        android:onClick="shareMain"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/share_bt" />

</RelativeLayout>
