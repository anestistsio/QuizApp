<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:resizeableActivity="false">

    <ImageButton
        android:id="@+id/geography_bt"
        android:layout_width="174dp"
        android:layout_height="140dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/national_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/geography_icon" />


    <ImageButton
        android:id="@+id/general_bt"
        android:layout_width="174dp"
        android:layout_height="140dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clubs_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/general_icon" />


    <ImageButton
        android:id="@+id/national_bt"
        android:layout_width="174dp"
        android:layout_height="140dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/geography_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/national_icon" />

    <ImageButton
        android:id="@+id/clubs_bt"
        android:layout_width="174dp"
        android:layout_height="140dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/general_bt"
        app:srcCompat="@drawable/clubs_icon" />


    <TextView
        android:id="@+id/geography_tv"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:textSize="20sp"
        android:fontFamily="@font/play"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="441dp"
        app:layout_constraintStart_toEndOf="@+id/national_tv"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/general_tv"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:text="General"
        android:fontFamily="@font/play"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="261dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toEndOf="@+id/clubs_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/national_tv"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="441dp"
        android:fontFamily="@font/play"
        android:gravity="center_horizontal"
        android:text="National"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/geography_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clubs_tv"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="261dp"
        android:fontFamily="@font/play"
        android:gravity="center_horizontal"
        android:text="Clubs"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/general_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:src="@drawable/mini_logo"
        app:layout_constraintEnd_toEndOf="@+id/top"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.40"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:id="@+id/shadow_v"
        android:layout_height="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shadow"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamplay_tv"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/play"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/playing_team_im"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/score_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/grey"
        android:onClick="Score"
        android:text="SCORE"
        android:fontFamily="@font/play"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/playing_team_im"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/top"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_im" />

    <RelativeLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D4D4F"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp">

        <RelativeLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/team1_score_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/team1_im"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="45dp"
            android:textAlignment="center"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/team1_im"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/team1_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team1_im"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/play"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team2_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team2_im"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:fontFamily="@font/play"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/team2_im"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/team2_score_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/team2_im"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/play"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@+id/geography_questions"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="ReturnFromScore"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ok_orange" />

        <ImageView
            android:id="@+id/vs_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/vs_logo" />

        <ImageView
            android:id="@+id/clubs_questions"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            app:srcCompat="@drawable/clubs_icon" />

        <ImageView
            android:id="@+id/general_questions"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/clubs_questions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/general_icon" />

        <ImageView
            android:id="@+id/national_questions"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/general_questions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/national_icon" />

        <ImageView
            android:id="@+id/geography_questions"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/national_questions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/geography_icon" />

        <TextView
            android:id="@+id/team1_clubsquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="237dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/clubs_questions"
            android:gravity="center"
            android:fontFamily="@font/play"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team1_generalquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="353dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/general_questions"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team1_nationalquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="473dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/national_questions"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team1_geographyquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="601dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/geography_questions"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_clubsquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="237dp"
            android:layout_toEndOf="@+id/clubs_questions"
            android:gravity="center"
            android:fontFamily="@font/play"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_generalquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="353dp"
            android:layout_toEndOf="@+id/general_questions"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_nationalquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="473dp"
            android:layout_toEndOf="@+id/national_questions"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_geographyquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="601dp"
            android:layout_toEndOf="@+id/geography_questions"
            android:gravity="center"
            android:fontFamily="@font/play"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />



    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
