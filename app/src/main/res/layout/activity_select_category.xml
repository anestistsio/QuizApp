<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/geography_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="130dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/geography_icon" />

    <ImageButton
        android:id="@+id/general_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="38dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/general_icon" />

    <ImageButton
        android:id="@+id/science_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/geography_bt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="50dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/science_icon" />

    <ImageButton
        android:id="@+id/sport_bt"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_below="@+id/general_bt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="38dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sport_icon" />

    <TextView
        android:id="@+id/teamplay_tv"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/team1_name_tv"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/team2_name_tv"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/team1_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="74dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/team2_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="63dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
