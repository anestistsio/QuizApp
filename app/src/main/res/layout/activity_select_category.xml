<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3BFFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageButton
        android:id="@+id/geography_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="100dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/geography_icon" />
    <ImageView
        android:id="@+id/geography_iv"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="100dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/geography_icon_disabled" />

    <ImageButton
        android:id="@+id/general_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/general_icon" />
    <ImageView
        android:id="@+id/general_iv"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/general_icon_disabled" />

    <ImageButton
        android:id="@+id/science_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="270dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/science_icon" />
    <ImageView
        android:id="@+id/science_iv"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="270dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/science_icon_disabled" />

    <ImageButton
        android:id="@+id/sport_bt"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="38dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sport_icon" />
    <ImageView
        android:id="@+id/sport_iv"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="38dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/sport_icon_disabled" />

    <TextView
        android:id="@+id/teamplay_tv"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/team1_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/team2_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/team1_score_tv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/team1_im"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/team2_score_tv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/team2_im"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="66dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team1_im"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/team1_name_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team2_im"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/team2_name_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="55dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

</RelativeLayout>
