<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/geography_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="400dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/geography_icon" />

    <ImageView
        android:id="@+id/geography_iv"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="400dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/geography_icon_disabled" />

    <ImageButton
        android:id="@+id/general_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="400dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/general_icon" />

    <ImageView
        android:id="@+id/general_iv"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="400dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/general_icon_disabled" />

    <ImageButton
        android:id="@+id/science_bt"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="230dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/science_icon" />

    <ImageView
        android:id="@+id/science_iv"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="230dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/science_icon_disabled" />

    <ImageButton
        android:id="@+id/sport_bt"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="225dp"
        android:background="#00FFFFFF"
        android:onClick="Startgame"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sport_icon" />


    <ImageView
        android:id="@+id/sport_iv"
        android:layout_width="165dp"
        android:layout_height="130dp"
        android:layout_below="@+id/teamplay_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="225dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sport_icon_disabled" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ED4D4D4F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamplay_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/playing_team_im"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/score_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#F85F00"
        android:onClick="Score"
        android:text="SCORE"
        android:textColor="#4D4D4F"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/playing_team_im"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/top"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_im" />

    <RelativeLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D4D4F"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp">

        <RelativeLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#F85F00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/team1_score_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/team1_im"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="45dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/team1_im"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/team1_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team1_im"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team2_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team2_im"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/team2_im"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/team2_score_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/team2_im"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="55dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="ReturnFromScore"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ok_orange" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/vs_logo" />

        <ImageView
            android:id="@+id/greek_football"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="195dp"
            app:srcCompat="@drawable/geography_icon" />

        <ImageView
            android:id="@+id/general_questions"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/greek_football"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/general_icon" />

        <ImageView
            android:id="@+id/science_questions"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/general_questions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/science_icon" />

        <ImageView
            android:id="@+id/sports_questions"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/science_questions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/sport_icon" />

        <TextView
            android:id="@+id/team1_greekfootball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/greek_football"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team1_generalquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="338dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/general_questions"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team1_sciencequestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="458dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/science_questions"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team1_sportsquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="586dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/sports_questions"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_greekfootball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="222dp"
            android:layout_toEndOf="@+id/greek_football"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_generalquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="338dp"
            android:layout_toEndOf="@+id/general_questions"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_sciencequestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="458dp"
            android:layout_toEndOf="@+id/science_questions"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team2_sportsquestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="586dp"
            android:layout_toEndOf="@+id/sports_questions"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
